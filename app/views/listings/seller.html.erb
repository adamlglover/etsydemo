<h1>Manage Listings</h1>
<div class="well well-sm">
<h5> Hey <%=current_user.name%>! Here you can view and make changes to all of your listings.</h5>
</div>
 <% if user_signed_in? %>
<table class="table table-striped table-bordered">
  <tr>
  <th>Image</th>
  <th>Name</th>
  <th>Description</th>
  <th>Price</th>
  <th>Action</th>
  </tr>
  <% @listings.each do |listing| %>
  <tr>
  <td><%= image_tag listing.image_url(:thumb) %></td>
    <td><%= listing.name %></td>
  <td><%= listing.description %></td>
  <td><%= number_to_currency(listing.price) %></td>
  <td>
    
    <button type="button" class="btn btn-default" aria-label="Left Align">
  <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
      <%=  link_to 'View', listing %>  
     </button>
    
    <button type="button" class="btn btn-default">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%=  link_to 'Edit', edit_listing_path(listing) %>  
     </button>
    
    <button type="button" class="btn btn-default">
  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>  
     </button>
   
    </td>
    
    
  </tr>
  <% end %>
</table>
<% end %>
